
<br>
<div class="container-fluid">
  <div class="row">
    <div class="text-center">
      <% @categories.each do |category| %>
          <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
            <h2><%= link_to("#{category.name}", {:controller => 'announcement', :action => 'view', :id => category.id, :class => "btn btn-lg btn-primary btn-block"}) %></h2>
          </div>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
      <% @announcements.take(5).each do |announcement| %>
        <div class="alert alert-success">
          <div class="row">
            <div class="col-xs-12 col-sm-7 col-md-5 col-lg-4 text-left">
              <%=image_tag('sample.png', size: "200x200")%>
            </div>
            <h3 class="col-xs-12 col-sm-5 col-md-7 col-lg-8 text-center">
              <%=announcement.title%>
              <div class="row">
                <h5>
                  <% @categories.each do |category| %>
                    <% if announcement.announcement_category_id == category.id %>
                      <%= category.name %>
                    <% end %>
                  <% end %>
                </h5>
              </div>
            </h3>
            <h3 class="col-xs-12 col-sm-6 col-md-6 col-lg-4 text-left">
              Cena za godzine: <%=announcement.price_per_hour %> zł
              <div class="row">
                <h4>
                  Cena za dzień: <%=announcement.price_per_day %> zł
                </h4>
              </div>
            </h3>
            <h4 class="col-xs-12 col-sm-6 col-md-6 col-lg-4 text-right"><br>Data dodania: <%=announcement.created_at %></h4>
          </div>
        </div>
      <%end%>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
      <% i = 0 %>
      <% @announcements.take(10).each do |announcement| %>
        <% if i < 5 %>
        <%i = i + 1%>
        <%next%>
        <%else%>
        <div class="alert alert-info">
          <div class="row">
            <div class="col-xs-12 col-sm-7 col-md-5 col-lg-4 text-left">
              <%=image_tag('sample.png', size: "200x200")%>
            </div>
            <h3 class="col-xs-12 col-sm-5 col-md-7 col-lg-8 text-center">
              <%=announcement.title%>
              <div class="row"><h5>
                <% @categories.each do |category| %>
                  <% if announcement.announcement_category_id == category.id %>
                    <%= category.name %>
                  <% end %>
                <% end %>
                </h5>
              </div>
            </h3>
            <h3 class="col-xs-12 col-sm-6 col-md-6 col-lg-4 text-left">
              Cena za godzine: <%=announcement.price_per_hour %> zł
              <div class="row">
                <h4 class="text-left">
                  Cena za dzień: <%=announcement.price_per_day %> zł
                </h4>
              </div>
            </h3>
            <h4 class="col-xs-12 col-sm-6 col-md-6 col-lg-4 text-right"><br>
              Data dodania: <%=announcement.created_at %>
            </h4>
          </div>
        </div>
        <%end%>
      <%end%>
    </div>
  </div>

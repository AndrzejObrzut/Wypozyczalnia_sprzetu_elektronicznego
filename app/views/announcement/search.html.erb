<div class="container">
  <div class="text-center">
        <h1><b>
          Wyniki wyszukiwania dla <%= params[:search]%>
        </b></h1>
  </div>
  <div class="row">
      <table class="table table-striped table-bordered table-hover table-condensed">

          <tr>
              <th><font size="5">Zdjęcie</font></th>
              <th><font size="5">Tytuł</font></th>
              <th><font size="5">Opis</font></th>
              <th><font size="5">Cena za godzinę</font></th>
              <th><font size="5">Cena za dzień</font></th>
              <% if session[:is_admin] %>
                <th><font size="5">Akcje</font></th>
              <% end %>
          </tr>

      <% @search_announcemets.each do |announcement| %>
        <tr>
            <th><%=image_tag('sample.png', size: "200x200")%></th>
            <th><font size="4"><%= announcement.title %></font></th>
            <th><%= announcement.description %></th>
            <th><%= announcement.price_per_hour %></th>
            <th><%= announcement.price_per_day %></th>
            <% if session[:is_admin] %>
              <td>
                <%= link_to("Pokaż", {:action => 'show', :id => announcement.id}, :class=>"btn btn-xs btn-primary")%>
                <br><br>
                <%= link_to("Edycja", {:action => 'edit', :id => announcement.id}, :class=>"btn btn-xs btn-primary")%>
                <br><br>
                <%= link_to("Usuń", {:action => 'delete', :id => announcement.id}, :class=>"btn btn-xs btn-primary")%>
              </td>
            <% end %>
        </tr>
      <% end %>

      </table>


  </div>

</div>

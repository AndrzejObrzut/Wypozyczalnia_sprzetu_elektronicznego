<center>
<div class="container" style="max-width: 1200px;">
  <h1>Kategorie</h1>

  <p>
    Ilość kategorii: <%= @categories.size%>
  </p>

  <div class="row", style="padding-bottom:10px;">
    <%= link_to("Dodaj kategorię", {:controller => 'announcement_categories', :action => 'new'}, :class=>"btn btn-info")%>
    <%= link_to("Panel zarządzania", {:controller => 'access', :action => 'index'}, :class=>"btn btn-info") %>
  </div>


  <table class="table table-striped table-bordered table-hover table-condensed">
    <tr>
      <th>ID</th>
      <th>zdjecie</th>
      <th>Nazwa</th>
      <th>Ilość ogłoszeń</th>
      <th>Utworzona</th>
      <th>Edytowana</th>
      <th>Akcje</th>
    </tr>

    <% @categories.each do |category| %>
      <tr>
        <td><%=category.id %></td>
        <td><%= image_tag(url_for(:action => "show", :id => category.id), size: "200x200", alt: category.name) %></td>
        <td><%=category.name%></td>
        <td align="center"><%=category.announcements.size %></td>
        <td><%=category.created_at%></td>
        <td><%=category.updated_at%></td>
        <td> <br>
          <%= link_to("Pokaż ogłoszenia", {:controller => 'announcement', :action => 'view_by_category', :id => category.id}, :class=>"btn btn-xs btn-primary")%><br><br>
          <%= link_to("Edycja", {:action => 'edit', :id => category.id}, :class=>"btn btn-xs btn-primary")%><br><br>
          <%= link_to("Usuń", {:action => 'delete', :id => category.id}, :class=>"btn btn-xs btn-primary")%><br><br>
          <%= link_to("Pobierz", {:action => 'download', :id => category.id}, :class=>"btn btn-xs btn-primary")%><br><br>

        </td>

      </tr>
    <% end %>

  </table>
</div>
</center>

<center>

<%= form_tag(:action => 'login_form') do %>
  <div class="container col-xs-4 col-xs-offset-4">
    <h2 class="text-center">Zaloguj się</h2>
      <form role="form">

        <div class="form-group">
          <%= label(:email, "Email:") %>
          <%= email_field_tag(:email) %>
        </div>

        <div class="form-group">
          <%= label(:password, "Hasło:") %>
          <%= password_field_tag(:password) %>
        </div>

        <div>
          <p>
           Nie masz jeszcze konta? <%=link_to(" Zarejestruj się!", {:controller => 'access', :action => 'registration'}) %>
         </p>
        </div>

        <div class="row">

          <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3">
            <%= submit_tag("Zaloguj się", :class=>"btn btn-lg btn-primary btn-block") %>
          </div>
        </div>
      </form>
    </div> <!-- /container -->
  <%end%>

</center>

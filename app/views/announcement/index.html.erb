<center>
<div class="container" style="max-width: 1200px;">
  <h1>Ogłoszenia</h1>

  <p>
    Ilość stron: <%= @announcements.size%>
  </p>

  <p>
    <%= link_to("Dodaj ogłoszenie", {:controller => 'announcement', :action => 'add'}, :class=>"btn btn-info")%>
  </p>

  <table class="table table-striped table-bordered table-hover table-condensed">
    <tr>
      <th>ID</th>
      <th>Tytuł</th>
      <th>Cena za godzinę</th>
      <th>Cena za dzień</th>
      <th>Utworzona</th>
      <th>Edytowana</th>
      <th>Akcje</th>
    </tr>

    <% @announcements.each do |announcement| %>
      <tr>
        <td><%=announcement.id %></td>
        <td><%=announcement.title%></td>
        <td><%=announcement.price_per_hour%></td>
        <td><%=announcement.price_per_day%></td>
        <td><%=announcement.created_at%></td>
        <td><%=announcement.updated_at%></td>
        <td>
          <%= link_to("Pokaż", {:action => 'show', :id => announcement.id}, :class=>"btn btn-sm btn-primary")%>
          <%= link_to("Edycja", {:action => 'edit', :id => announcement.id}, :class=>"btn btn-sm btn-primary")%>
          <%= link_to("Usuń", {:action => 'delete', :id => announcement.id}, :class=>"btn btn-sm btn-primary")%>
        </td>
      </tr>
    <% end %>
  </table>

    <%= link_to("Panel zarządzania", {:controller => 'access', :action => 'index'}, :class=>"btn btn-info") %>
  </div>
  </center>

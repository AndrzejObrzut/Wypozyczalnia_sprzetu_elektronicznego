<%= form_for(:update_user, :url => {:action => "update", :id => @update_user.id}) do |update_user|%>

<div class="container col-xs-4 col-xs-offset-4">
  <h1 class="text-center">Edycja</h1>

  <form role="form">
    <div class="form-group">
      <%= update_user.label(:email, "Email:") %>
      <br>
      <%= update_user.label(:email, @update_user.email) %>
    </div>
    <div class="form-group">
      <%= update_user.label(:user_name, "Nazwa użykownika:") %>
      <br>
      <%= update_user.text_field(:user_name, :class=>"form-control") %>
    </div>
    <div class="form-group">
      <%= update_user.label(:password, "Hasło:") %>
      <%= update_user.password_field(:password, :class=>"form-control") %>
    </div>
    <div class="form-group">
      <%= update_user.label(:password_confirmation, "Potwierdź hasło:") %>
      <%= update_user.password_field(:password_confirmation, :class=>"form-control") %>
    </div>
    <div class="form-group">
      <%= update_user.label(:first_name, "Imię:") %>
      <%= update_user.text_field(:first_name, :class=>"form-control") %>
    </div>
    <div class="form-group">
      <%= update_user.label(:second_name, "Nazwisko:") %>
      <%= update_user.text_field(:second_name, :class=>"form-control") %>
    </div>
    <div class="form-group">
      <%= update_user.label(:phone, "Telefon:") %>
      <%= update_user.telephone_field(:phone, :class=>"form-control") %>
    </div>


<div class="row">
  <div class="col-xs-4">
  </div>
  <div class="col-xs-4">
    <%= submit_tag("Aktualizuj", :class=>"btn btn-lg btn-primary btn-block") %>
  </div>
</div>
</form>
</div>
<%end%>

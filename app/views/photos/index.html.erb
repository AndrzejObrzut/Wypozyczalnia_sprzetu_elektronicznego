<center>
<div class="container">
  <h1>Zdjęcia</h1>

  <p>
    Ilość zdjęć: <%= @photos.size%>
  </p>

  <div class="row", style="padding-bottom:10px;">
    <%= link_to("Dodaj zdjęcie", {:controller => 'photos', :action => 'new'}, :class=>"btn btn-info")%>
    <%= link_to("Panel zarządzania", {:controller => 'access', :action => 'index'}, :class=>"btn btn-info") %>
  </div>

  <table class="table table-striped table-bordered table-hover table-condensed">
    <tr>
      <th>ID</th>
      <th>Nazwa użytkownika</th>
      <th>Mail użytkownika</th>
      <th>Ogłoszenie</th>
      <th>Zdjęcie</th>
      <th>Utworzona</th>
      <th>Edytowana</th>
      <th>Akcje</th>
    </tr>

    <% @photos.each do |photo| %>
      <tr>
        <td><%=photo.id %></td>
        <td><%=photo.announcement.user.user_name %></td>
        <td><%=photo.announcement.user.email %></td>
        <td><%= link_to("#{photo.announcement.title}", {:controller => 'announcement', :action => 'show', :id => photo.announcement.id})%></td>
        <td><%=image_tag photo.image %></td>
        <td><%=photo.created_at%></td>
        <td><%=photo.updated_at%></td>
        <td>
          <%= link_to("Edycja", {:action => 'edit', :id => photo.id}, :class=>"btn btn-xs btn-primary")%>
          <%= link_to("Usuń", {:action => 'delete', :id => photo.id}, :class=>"btn btn-xs btn-primary")%>
        </td>

      </tr>
    <% end %>

  </table>

  <%= link_to("Panel zarządzania", {:controller => 'access', :action => 'index'}, :class=>"btn btn-info") %>
</div>
</center>

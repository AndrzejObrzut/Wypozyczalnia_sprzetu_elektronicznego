
<%= form_for(:announcement, :url=> {:action => 'create'}) do |field| %>
<div class="container col-xs-4 col-xs-offset-4">
  <h2 class="text-center">Ogłoszenie</h2>
  <form role="form">
    <div class="form-group">
      <%= field.label(:announcement_category_id, "Kategoria:") %>
      <br>
      <%= field.select(:announcement_category_id, @category.map{|t| [t.name, t.id]}, :class => 'form-control' )%>
    </div>
    <div class="form-group">
      <%= field.label(:title, "Tytuł:") %>
      <%= field.text_field(:title, :class=>"form-control")%>
    </div>
    <div class="form-group">
      <%= field.label(:description, "Opis:") %>
      <%= field.text_area(:description, :class=> "form-control", rows: 5 )%>
    </div>
    <div class="form-group">
      <%= field.label(:price_per_hour, "Cena za godzinę:") %>
      <%= field.text_field(:price_per_hour, :class=>"form-control")%>
    </div>
    <div class="form-group">
      <%= field.label(:price_per_day, "Cena za dzień:") %>
      <%= field.text_field(:price_per_day, :class=>"form-control")%>
    </div>
    <div class="row">
      <div class="col-xs-4">
      </div>
      <div class="col-xs-4">
        <%= submit_tag("Dodaj!", :class=>"btn btn-lg btn-primary btn-block") %>
      </div>
    </div>
  </form>
</div>
<%end%>

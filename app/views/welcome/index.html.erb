<div class="container-fluid">
<br>
  <div class="row">
      <font size="10">
      <div class="col-xs2 text-center">
        <% @categories.each do |category| %>
          <button type="btn btn-primary btn-lg" role="button" name="button">
            <%= link_to("#{category.name}", {:controller => 'announcement', :action => 'view', :id => category.id}) %>
          </button>
        <% end %>
      </div>
    </font>
  </div>

  <br>
  <% @announcements.take(5).each do |announcement| %>
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-2">
      <%=image_tag('sample.png', size: "200x200")%>
    </div>
    <div class="col-md-6">
      <div class="row">
        <h3 class="text-center"> <%= announcement.title %></h3>
      </div>
      <div class="row">
        <% @categories.each do |category| %>
          <% if announcement.announcement_category_id == category.id %>
          <h5 class="text-left"><%= category.name %></h5>
          <% end %>
        <% end %>
      </div>
      <div class="row">
        <h3 class="text-right">Cena za godzine: <%=announcement.price_per_hour %> zł</h3>
      </div>
      <div class="row">
        <div class="col-md-6">
          <h4 class="text-left"> Data dodania: <%=announcement.created_at %></h4>
        </div>
        <div class="col-md-6">
          <h4 class="text-right">Cena za dzień: <%=announcement.price_per_day %> zł</h4>
        </div>
      </div>
    </div>
    <div class="col-md-2"></div>
  </div>
  <%end%>
</div>

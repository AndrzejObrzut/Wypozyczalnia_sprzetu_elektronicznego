<div class="container">
<div class="text-center">
      <h1><b>
        Twoje ogłoszenia
      </b></h1>
</div>


<% @announcements.each do |announcement| %>
  <% if announcement.user_id == session[:user_id]%>
    <%= link_to({:controller => 'announcement', :action => 'show', :id => announcement.id}) do %>
      <div class="container col-xs-10 col-xs-offset-1">
        <!-- announcement -->
        <div class="row">
          <!-- photo -->
          <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
            <% @photos.each do |photo| %>
              <% if photo.announcement.id == announcement.id%>
              <br><br>
                <td><%=image_tag(photo.image, :class => "product_img")%></td>
                <% break %>
              <% end %>
            <% end %>
          </div>
          <!-- tilte and prices -->
          <div class="col-xs-12 col-sm-5 col-md-7 col-lg-7">
            <div class="row", style="padding-top:50px;">
              <%= announcement.title %>
            </div>
            <div class="row">
              <%= announcement.price_per_hour %>
            </div>
            <div class="row">
              <%= announcement.price_per_day %>
            </div>
          </div>
          <div class="col-xs-12 col-sm-1 col-md-1 col-lg-1">
            <div class="row", style="padding-top:50px;">
              <%= link_to("Pokaż", {:action => 'show', :id => announcement.id}, :class=>"btn btn-xs btn-primary")%>
            </div>
            <div class="row", style="padding-top:10px;">
              <%= link_to("Edycja", {:action => 'edit', :id => announcement.id}, :class=>"btn btn-xs btn-primary")%>
            </div>
            <div class="row", style="padding-top:10px;">
              <%= link_to("Usuń", {:action => 'delete', :id => announcement.id}, :class=>"btn btn-xs btn-primary")%>
            </div>
          </div>
        </div>
    </div>
    <% end %>
  <% end %>
<% end %>
</div>

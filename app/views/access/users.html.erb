<center>
<div style="max-width: 1200px;">
<h1>Zarejestrowani użytkownicy</h1>
<p>
  Ilość użytkowników: <%= @users.size %>
</p>

<table class="table table-striped table-bordered table-hover table-condensed">
  <tr>
      <th>user_name</th>
      <!-- <th>password_digest</th> -->
      <th>first_name</th>
      <th>last_name</th>
      <th>email</th>
      <th>phone</th>
      <th>is_admin</th>
      <th></th>
      <th></th>
      <th></th>
  </tr>
<% @users.each do |user| %>
  <tr>
      <th><%= user.user_name %></th>
      <!-- <th><%= user.password_digest %></th> -->
      <th><%= user.first_name %></th>
      <th><%= user.last_name %></th>
      <th><%= user.email %></th>
      <th><%= user.phone %></th>
      <th><%= user.is_admin %></th>
      <th><%= link_to("Nadaj prawa administratora", {:action => 'give_admin', :id => user.id}, :class=>"btn btn-xs btn-primary")%></th>
      <th><%= link_to("Odbierz prawa administratora", {:action => 'take_admin', :id => user.id}, :class=>"btn btn-xs btn-primary")%></th>
      <th><%= link_to("Edytuj", {:action => 'edit', :id => user.id}, :class=>"btn btn-xs btn-primary")%></th>
  </tr>
<% end %>

</table>

<%= link_to("Panel zarządzania", {:controller => 'access', :action => 'index'}, :class=>"btn btn-info") %>
</div>
</center>


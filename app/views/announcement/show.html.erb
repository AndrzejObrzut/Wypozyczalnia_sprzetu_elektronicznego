
<div class="container">
  <div class="row">
    <div class="backimg">
      <%= image_tag('tlo.png',  height: '300', width: '100%') %>
    </div>
  </div>

  <!-- description and prices -->
  <div class="row">

    <!-- description -->
    <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8">
      <div class="jumbotron jumbotron-fluid" style="margin-top: 15px;">
        <div class="container">
          <h2 class="display-3"><%= @announcement.title %></h2>
          <p class="lead"><%= @announcement.description%></p>
          <h3><span class="label label-pill label-primary">Cena za godzine: <%= @announcement.price_per_hour%>zł</span></h3>
          <h3><span class="label label-pill label-success">Cena za dzień: <%= @announcement.price_per_day%>zł</span></h3>
          <h4 style="padding-top:5px;">Kontakt: <%=@announcement.user.first_name%></h4>
          <h5>E-mail: <%=@announcement.user.email%></h5>
          <h6>Na WSE od: <%=@announcement.user.created_at %></h6>

        </div>
      </div>
    </div>
    <!-- prices -->
    <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
      <!-- Display all photos - nice to see gallery ;D -->
      <div class="row">
        <% @photos.each do |photo| %>
            <% if photo.announcement.id == @announcement.id%>
              <%=image_tag photo.image, style: "width:100%; margin: 2px 0;" %>
            <%end%>
        <% end %>
        <h6 class="text-right">Utworzono: <%=@announcement.created_at%></h6>
        <h6 class="text-right">Utworzono: <%=@announcement.updated_at%></h6>
      </div>
    </div>
  </div>
















  <!-- fotter -->
  <div class="row", style="padding-top:50px;">

  </div>
</div>

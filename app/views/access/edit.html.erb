<%= form_for(:update_parametrs, :url => {:action => "update", :id => @user.id}) do |user|%>

  <div class="container col-xs-4 col-xs-offset-4">
    <h1 class="text-center">Edycja</h1>

    <form role="form">
      <div class="form-group">
        <%= user.label(:first_name, "ImiÄ™:") %>
        <%= user.text_field(:first_name, :class=>"form-control") %>
      </div>
      <div class="form-group">
        <%= user.label(:last_name, "Nazwisko:") %>
        <%= user.text_field(:last_name, :class=>"form-control") %>
      </div>
      <div class="form-group">
        <%= user.label(:phone, "Telefon:") %>
        <%= user.telephone_field(:phone, :class=>"form-control") %>
      </div>

      <div class="row">
        <div class="col-xs-4"></div>
        <div class="col-xs-4">
          <%= submit_tag("Aktualizuj", :class=>"btn btn-lg btn-primary btn-block") %>
        </div>
      </div>
    </form>
  </div>
<%end%>

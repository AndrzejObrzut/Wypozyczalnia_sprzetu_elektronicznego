<div class="container">
  <div class="text-center">
        <h1><b>
          Wyniki wyszukiwania dla <%= params[:search]%>
        </b></h1>
  </div>
  <!-- Whole div is a link -->
  <% @search_announcemets.each do |announcement| %>
    <%= link_to({:controller => 'announcement', :action => 'show', :id => announcement.id}) do %>
      <div class="container col-xs-10 col-xs-offset-1">
        <!-- announcement -->
        <div class="row">
          <!-- photo -->
          <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
            <% @photos.each do |photo| %>
              <% if photo.announcement.id == announcement.id%>
              <br><br>
                <td><%=image_tag(photo.image, :class => "product_img")%></td>
                <% break %>
              <% end %>
            <% end %>
          </div>
          <!-- tilte and prices -->
          <div class="col-xs-12 col-sm-6 col-md-8 col-lg-8">
            <div class="row", style="padding-top:50px;">
              <%= announcement.title %>
            </div>
            <div class="row">
              <%= announcement.price_per_hour %>
            </div>
            <div class="row">
              <%= announcement.price_per_day %>
            </div>
          </div>
        </div>
    </div>
    <% end %>
  <% end %>

</div>

<% if object && object.errors.size > 0 %>
  <div class="bg_danger">
    <table class="table">
      <tr class="danger">
        <td>Wystąpiły błey podczas zapisu rekurdu do bazy daynch, ilość błędów: <%= object.errors.size %>
          <br>
          dla następujących pól:</td>
      </tr>
      <% object.errors.full_messages.each do |message| %>
        <tr class="warning">
          <td><b><%= message %></b></td>
        </tr>
      <% end %>
    </table>
  </div>
<% end %>
